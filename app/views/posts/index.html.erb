<h1 class="header">Comment App</h1>
<div class="form-header">Comment Form</div>
<div class="form">
  <%= render partial: "form" %>
</div>

<div id="list" class="list">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-date">
        投稿日時：<%= post.created_at %>
      </div>
      <div class="post-content">
        <%= post.content %>
      </div>
    </div>
  <% end %>
</div>